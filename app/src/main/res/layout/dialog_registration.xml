<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/registration_dialog">

    <TextView
        android:text="Registration"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/textViewRegistration"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:textColor="#000000" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/registration_editText_email"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:hint="Email" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/registration_editText_password"
        android:hint="Password"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/registration_editText_comfirmPassword"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:hint="Comfirm Password" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/registration_textView_error"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColor="@android:color/holo_red_light"
        android:visibility="gone" />

    <Button
        android:text="Register"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registration_button_register"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp" />

</LinearLayout>